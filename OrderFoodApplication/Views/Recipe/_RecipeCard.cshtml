@model IEnumerable<OrderFoodApplication.Models.Recipe>

@foreach (var recipe in Model)
{
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4 mb-3">
        <div class="shadow rounded p-2">
            <div class="card dishCard">
                <img src="@recipe.Image_url" class="card-img-top h-50" />
                <div class="card-body">
                    <p class="card-title fw-bold fs-6 text-dark ">@recipe.Title</p>
                    <span class="card-text ">@recipe.Publisher</span>
                    <div class="d-flex flex-wrap justify-content-between">
                        <a href="/Recipe/Order?id=@recipe.Id" 
                        class="btn btn-sm bg-black text-white shadow rounded p-2">Order</a>
                        <form id="addToCartForm_R" action="/Cart/SaveCart" method="post">
                            <input type="hidden" name="recipeId" id="recipeId" value="@recipe.Id" />
                            <input type="hidden" name="returnUrl" id="returnUrl_R" value="/" />
                            <button type="submit" class="addToCartIcon_R" style="outline: none; border: none; background: white" onclick="redirectToLogin()">
                                <i class="fa-regular fa-square-plus fs-2"></i>
                            </button>
                        </form>
                        <!--<span class="addToCartIcon"><i class="fa-regular fa-cart-plus fs-2"></i></span>-->
                    </div>
                </div>
            </div>
        </div>
    </div>
}

